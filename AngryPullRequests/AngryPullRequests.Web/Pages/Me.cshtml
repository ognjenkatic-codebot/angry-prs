@page
@model AngryPullRequests.Web.Pages.MeModel
@{
}

<div class="container">
    <h1>User Information</h1>

    
    <div class="text-center mb-4">
        <a href="@Model.GithubProfile"><img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;"></a>
    </div>

    <form method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="@Model.Name" readonly>
        </div>
        <div class="form-group">
            <label for="githubPat">GitHub Personal Access Token</label>
            <input type="password" class="form-control" id="githubPat" name="githubPat">
        </div>
        <div class="form-group">
            <label for="githubLogin">GitHub Login</label>
            <input type="text" class="form-control" id="githubLogin" name="githubLogin" value="@Model.GithubLogin" readonly>
        </div>
        <div class="form-group">
            <label for="note">Note</label>
            <textarea class="form-control" id="note" name="note" rows="3" >@Model.Note</textarea>
        </div>
        <div class="form-group">
            <input type="submit">
        </div>
        
    </form>
</div>