@page
@model AngryPullRequests.Web.Pages.MeModel
@{
}

<div class="container">
    <div class="row">
        <h2 class="mb-4 mt-4 text-center">@Model.Name (@Model.GithubLogin)</h2>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="text-center mb-4">
                <a href="@Model.GithubProfile"><img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;"></a>
            </div>
        </div>
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <label for="githubPat">GitHub Personal Access Token</label>
                    <input type="password" class="form-control" id="githubPat" name="githubPat">
                </div>
                <div class="form-group">
                    <label for="note">Note</label>
                    <textarea class="form-control" id="note" name="note" rows="3">@Model.Note</textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>